# Server Configuration
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=file:./data/wamr.db

# Security - CHANGE THESE IN PRODUCTION!
# Generate JWT_SECRET: openssl rand -base64 32
JWT_SECRET=your-secret-jwt-key-change-in-production

# Generate ENCRYPTION_KEY: openssl rand -base64 32
ENCRYPTION_KEY=your-secret-encryption-key-change-in-production

# Admin User (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-on-first-login

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# WhatsApp
WHATSAPP_SESSION_PATH=./.wwebjs_auth

# Media Monitoring
# How often to check if requested media is available (in milliseconds)
# Default: 300000 (5 minutes)
MEDIA_MONITORING_INTERVAL_MS=300000

# External APIs (configured via admin dashboard)
# These are examples - actual configuration done through UI
# RADARR_URL=http://your-radarr-instance:7878
# RADARR_API_KEY=your-radarr-api-key
# SONARR_URL=http://your-sonarr-instance:8989
# SONARR_API_KEY=your-sonarr-api-key
# OVERSEERR_URL=http://your-overseerr-instance:5055
# OVERSEERR_API_KEY=your-overseerr-api-key
