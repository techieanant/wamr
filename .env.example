# Docker Compose Configuration
# Copy this file to .env and update the values

# Backend Port (default: 4000)
BACKEND_PORT=4000

# Frontend Port (default: 3000)
FRONTEND_PORT=3000

# Frontend API URL (should point to backend)
VITE_API_URL=http://localhost:4000

# Security - REQUIRED! Change these values!
# Generate JWT_SECRET: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production

# Generate ENCRYPTION_KEY: openssl rand -hex 32
ENCRYPTION_KEY=your-64-char-hex-encryption-key-change-this-in-production

# Admin Credentials - REQUIRED! Change the password!
# Username defaults to 'admin@wamr.local' if not set
ADMIN_USERNAME=admin@wamr.local
ADMIN_PASSWORD=changeme123456

# CORS Configuration (frontend URL)
CORS_ORIGIN=http://localhost:3000

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# Media Monitoring Interval (optional, in milliseconds)
MEDIA_MONITORING_INTERVAL_MS=300000

# Logging (optional)
LOG_LEVEL=info
LOG_PRETTY=false
